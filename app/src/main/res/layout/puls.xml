<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <ImageButton
        android:id="@+id/PulsGrafik"
        android:contentDescription="Detaillierte Pulssanzeige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:onClick="openToastPuls"
        android:src="@drawable/herz"
        android:tooltipText="Detaillierte Pulsgrafik" />

    <TextView
        android:id="@+id/HRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detaillierte Puls- und Herzratengrafik"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        />



</RelativeLayout>